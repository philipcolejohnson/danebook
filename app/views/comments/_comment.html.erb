<div class="row comment" data-comment-id="<%= comment.id %>">
  <div class="col-sm-1">
    <a href="<%= user_path(comment.commenter) %>"><img src="<%= comment.commenter.profile_url %>"></a>
  </div>
  <div class="col-sm-10">
    <a href="<%= user_path(comment.commenter) %>"><%= comment.commenter.name %></a><time datetime="<%= comment.created_at.strftime("%Y/%m/%d") %>"> posted on <%= comment.created_at.strftime("%A %m/%d/%Y") %></time>
    <p><%= comment.text %></p>
    <div class="row">
      <div class="col-sm-12 comment-like">
        <%= render partial: "likes/comment_like", locals: { comment: comment } %>
      </div>
    </div>
  </div>
</div>
